<%- include('../partials/header') %>


<!-- breadcrumb -->
<br>
<div class="container">
    <nav class="breadcrumb is-small" aria-label="breadcrumbs">
        <ul>
            <li><a href="/">Home</a></li>
            <li class="is-active"><a href="#" aria-current="page">All Recipes</a></li>
        </ul>
    </nav>
</div>


<!-- hero title -->
<section class="hero">
    <div class="hero-body">
        <p class="title">allrecipesÂ·ish</p>
        <p class="subtitle">Browse all submitted recipes</p>
    </div>
</section>


<!-- body/content -->
<div class="container">
    <div class="columns is-centered">
        <div class="column is-narrow table-container">
            <table class="table is-striped is-narrow is-hoverable">
    <!-- table header -->
                <thead>
                    <tr>
                        <th></th>
                        <th class="is-selected has-text-justified is-size-5">Title</th>
                        <th class="is-selected has-text-justified is-size-5">Category</th>
                        <th class="is-selected has-text-justified is-size-5">Cooking Time</th>
                        <th class="is-selected has-text-justified is-size-5">Date Added</th>
                        <th class="is-selected has-text-justified is-size-5">Last Updated</th>
                    </tr>
                </thead>
                <% recipes.forEach(function(r) { %>
    <!-- table body  -->  
                    <tbody>   
    <!-- table rows  --> 
                        <tr>
    <!-- table cells generated by forEach fnc  -->  
                            <td class="image is-64x64 has-text-justified">
                                <% if (r.imageUrl) { %>
                                    <img class="is-rounded" src="<%= r.imageUrl %>" alt="Recipe Image">
                                <% } else { %>
                                    <img class="is-rounded" src="/images/ojigi_kuma.png" alt="Placeholder Image">
                                <% } %>
                            </td>
                            <td class="has-text-justified has-text-weight-bold"><a href="/recipes/<%= r._id %>"><%= r.name %></a></td>
                            <td class="has-text-justified"><%= r.category %></td>
                            <td class="has-text-justified"><%= r.cookingTime%> Minute(s)</td>
                            <td class="has-text-justified"	><%= r.createdAt.toLocaleDateString() %></td>
                            <td class="has-text-justified is-italic"><%= r.updatedAt.toLocaleDateString() %></td>
    <!-- last 3 table cells are buttons  -->  
                            <td>
                                <form action="/recipes/<%= r._id %>" method="GET">
                                    <button class="button is-primary is-info is-light is-rounded" type="submit">Recipe Detail</button>
                                </form>
                            <td>
                        </tr>
                    </tbody>
                <% }) %>
            </table>
        </div>
    </div>
</div>



















