<%- include('../partials/header') %>

<h2>Recipe Index "All Recipes</h2>

<h2>Recipe List</h2>
<table>
    <thead>
        <tr>
            <th>Recipe</th>
            <th>Cuisine</th>
            <th>Meal</th>
        </tr>
    </thead>

    <tbody>
        <% recipes.forEach(function(recip) { %>
            <tr
                <td>
                    <%= recip.recipeName %>
                </td>
                <td>
                    <%= recip.cuisine %>
                </td>
                <td>
                    <%= recip.meal %>
                </td>
                <td><a href="/recipes/<%= recip._id %>">Recipe Detail</a></td>
            </tr>
            <% }); %>
    </tbody>
</table>


<%- include('../partials/footer') %>
